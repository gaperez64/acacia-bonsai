INFO {
  TITLE:       "Parameterized Collector"
  DESCRIPTION: "Signals whether all input clients have delivered a token"
  SEMANTICS:   Mealy
  TARGET:      Mealy
}

GLOBAL {
  PARAMETERS {
    n = 6;
  }
}

MAIN {

  INPUTS {
    finished[n];
  } 

  OUTPUTS {
    allFinished; 
  }

  ASSERT {
    &&[0 <= i < n]
      (allFinished -> X (!allFinished W finished[i])); 
  }

  GUARANTEES {
    G F allFinished
      <-> &&[0 <= i < n] G F finished[i];
  }
  
}

