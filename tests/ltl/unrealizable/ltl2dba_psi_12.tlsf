INFO {
  TITLE:       "LTL -> DBA  -  Formula Psi From LtlNfBa Paper"
  DESCRIPTION: "Conversion of LTL to Deterministic Buchi Automaton"
  SEMANTICS:   Mealy
  TARGET:      Mealy
}

GLOBAL {
  PARAMETERS {
    n = 12;
  }

  DEFINITIONS {
    // eventually always p_i for some 0<=i<=n-1 
    any_event(bus) =
      ||[0 <= i < SIZEOF bus]
        (F G bus[i]);
  }
}

MAIN {

  INPUTS {
    p[n]; // input propositions
  }

  OUTPUTS {
    acc; // accepting state
  }

  GUARANTEES {
    (any_event(p))
      <-> G F acc;
  }

}
